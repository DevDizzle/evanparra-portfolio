{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "site": "evanparra-portfolio-site",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/chat",
        "function": {
          "functionId": "chat",
          "region": "us-central1"
        }
      },
      {
        "source": "/chat/**",
        "function": {
          "functionId": "chat",
          "region": "us-central1"
        }
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
