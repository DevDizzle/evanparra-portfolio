---
import SectionHeading from './SectionHeading.astro';
import AgentBookingChat from './AgentBookingChat';

const phoneNumber = '(904) 615-6418';
const telLink = `tel:${phoneNumber.replace(/[^0-9]/g, '')}`;
---

<section id="booking" class="bg-white">
  <div class="container py-20 md:py-24">
    <div class="max-w-4xl mx-auto">
      <div class="bg-gray-50 border border-slate-200 rounded-2xl shadow-lg p-6 md:p-10">
        <div class="max-w-2xl mx-auto text-center mb-8">
            <SectionHeading
                eyebrow="Get Started"
                title="Free AI Automation Audit (15 min)"
                body="Chat with my AI assistant below to learn more about my services or book your free roadmap session directly."
            />
            <div class="mt-8 mb-8">
                <a href={telLink} class="inline-flex items-center justify-center bg-white text-blue-700 border border-blue-200 px-6 py-3 rounded-xl font-semibold hover:bg-blue-50 focus:outline-none transition-colors text-sm">
                   Or call me directly: {phoneNumber}
                </a>
            </div>
        </div>
        <AgentBookingChat client:load />
      </div>
    </div>
  </div>
</section>
