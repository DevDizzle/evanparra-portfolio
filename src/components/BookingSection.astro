---
import SectionHeading from './SectionHeading.astro';
import BookingForm from './BookingForm';

const phoneNumber = '(904) 615-6418';
const telLink = `tel:${phoneNumber.replace(/[^0-9]/g, '')}`;
---

<section id="booking" class="bg-white">
  <div class="container py-20 md:py-24">
    <div class="max-w-4xl mx-auto">
      <div class="bg-gray-50 border border-slate-200 rounded-2xl shadow-lg p-6 md:p-10">
        <div class="max-w-2xl mx-auto text-center mb-8">
            <SectionHeading
                eyebrow="Get Started"
                title="Get Your Free Business Assessment & Quote"
                body="Share a few details about your business so I can deliver a tailored automation roadmap with transparent pricing to help you grow smarter."
            />
            <div class="mt-8">
                <a href={telLink} class="inline-flex items-center justify-center bg-blue-700 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:bg-blue-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2 focus-visible:ring-offset-white">
                    Call {phoneNumber}
                </a>
            </div>
            <div class="mt-12 text-center">
              <h2 class="text-3xl md:text-4xl font-extrabold text-slate-900">Book your free assessment</h2>
              <p class="text-lg text-slate-600 mt-4">Fill out the form below and I'll get back to you within one business day.</p>
            </div>
        </div>
        <BookingForm client:load />
      </div>
    </div>
  </div>
</section>
