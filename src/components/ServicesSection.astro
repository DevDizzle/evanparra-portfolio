---
import type { Service } from '../data/services';
import SectionHeading from './SectionHeading.astro';

interface Props {
  services: Service[];
}

const { services } = Astro.props;
---

<section id="services" class="py-12 md:py-20">
  <div class="container">
    <SectionHeading
      title="What I Solve For St. Johns County Businesses"
      subtitle="From chasing invoices to guessing your marketing ROI, I build systems that fix the most common (and costly) operational headaches."
    />
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-8">
      {services.map((service) => (
        <div class="bg-white border border-slate-200 rounded-2xl p-8 shadow-sm hover:shadow-lg transition-all">
          <div class="flex items-center gap-4">
            <div class="bg-blue-100 text-blue-600 rounded-full w-12 h-12 flex items-center justify-center">
              <i class={`${service.icon} text-xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-slate-800">{service.title}</h3>
          </div>
          <p class="text-slate-600 mt-4">{service.summary}</p>
          <div class="mt-6">
            <a href={`/services/${service.slug}`} class="font-semibold text-blue-600 hover:underline">
              See how it works &rarr;
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
