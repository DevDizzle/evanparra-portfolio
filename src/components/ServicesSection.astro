---
import SectionHeading from './SectionHeading.astro';

const services = [
  {
    title: "ML Pipeline Architecture",
    description: "End-to-end design of production-grade machine learning pipelines. From data ingestion to model serving and monitoring on Google Cloud or AWS.",
    icon: "network",
    link: "/services/ml-pipeline-architecture"
  },
  {
    title: "Data Engineering & Integration",
    description: "Build robust data pipelines that feed your AI. I unify your fragmented data into a single source of truth for analytics and machine learning.",
    icon: "database",
    link: "/services/data-engineering"
  },
  {
    title: "Autonomous Agent Systems",
    description: "Custom AI agents powered by LLMs that can reason, plan, and execute tasks via tool calling. Built with Genkit or LangChain.",
    icon: "bot",
    link: "/services/autonomous-agent-systems"
  },
  {
    title: "AI Strategy & Advisory",
    description: "Cut through the hype. Identify high-value AI use cases, assess technical feasibility, and build a roadmap that delivers ROI.",
    icon: "compass",
    link: "/services/ai-advisory"
  },
  {
    title: "Local Automation Audits",
    description: "For St. Augustine businesses: A comprehensive review of your operations to identify high-value automation opportunities.",
    icon: "search",
    link: "/services/local-automation-audits"
  }
];
---

<section id="services" class="py-20 bg-white">
  <div class="container">
    <SectionHeading
      eyebrow="What I Do"
      title="Technical Services"
      body="Specialized engineering for companies that need to ship AI, not just explore it."
    />
    
    <div class="mt-12 grid md:grid-cols-3 gap-8">
      {services.map((service) => (
        <div class="bg-slate-50 rounded-2xl p-8 border border-slate-200 hover:border-primary-200 hover:shadow-lg transition-all group flex flex-col">
          <div class="w-12 h-12 bg-white text-primary-600 rounded-xl border border-slate-200 flex items-center justify-center mb-6 shadow-sm group-hover:scale-110 transition-transform">
            {service.icon === 'network' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>}
            {service.icon === 'database' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path></svg>}
            {service.icon === 'bot' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>}
            {service.icon === 'compass' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>}
            {service.icon === 'search' && <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>}
          </div>
          
          <h3 class="text-xl font-bold text-slate-900 mb-3">{service.title}</h3>
          <p class="text-slate-600 mb-6 leading-relaxed flex-grow">{service.description}</p>
          
          <a href={service.link} class="inline-flex items-center text-primary-600 font-semibold text-sm hover:text-primary-700 mt-auto">
            Learn more <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
