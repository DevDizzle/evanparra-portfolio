---
export interface NavItem {
  label: string;
  href: string;
  external?: boolean;
}

const { navItems = [] } = Astro.props as { navItems?: NavItem[] };
---
<header class="bg-white/90 backdrop-blur border-b border-slate-200 sticky top-0 z-40">
  <div class="container py-4 flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
    <a href="/" class="text-lg font-extrabold text-slate-900 tracking-tight">
      Evan Parra
    </a>
    {navItems.length ? (
      <nav class="flex w-full flex-col items-stretch gap-2 md:w-auto md:flex-row md:items-center md:gap-5">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="inline-flex items-center justify-start gap-2 rounded px-2 py-2 text-base font-semibold text-slate-700 transition hover:text-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2 focus-visible:ring-offset-white md:justify-center md:px-0 md:py-0 md:text-sm"
            target={item.external ? '_blank' : undefined}
            rel={item.external ? 'noopener noreferrer' : undefined}
          >
            {item.label}
          </a>
        ))}
      </nav>
    ) : null}
  </div>
</header>
