---
import BaseLayout from '../layouts/BaseLayout.astro';
import AgentBookingChat from '../components/AgentBookingChat';

const title = "Contact | Evan Parra";
const description = "Get in touch for ML engineering projects or local automation audits.";
---

<BaseLayout title={title} description={description}>
  <div class="min-h-screen bg-slate-50 flex flex-col">
    <!-- Header -->
    <section class="bg-slate-900 text-white py-12 md:py-20">
      <div class="container text-center">
        <h1 class="text-3xl md:text-5xl font-bold mb-4">Let's Build Something</h1>
        <p class="text-slate-300 max-w-2xl mx-auto text-lg">
          Whether you need a custom agent, a production pipeline, or a local auditâ€”my AI receptionist is ready to help 24/7.
        </p>
      </div>
    </section>

    <!-- Chat Interface -->
    <section class="flex-grow py-12 px-4">
      <div class="container max-w-4xl mx-auto h-full">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-slate-200 h-[600px] flex flex-col">
          <div class="bg-primary-600 p-4 text-white text-center font-medium">
            AI Receptionist Online
          </div>
          <div class="flex-grow relative">
             <AgentBookingChat client:load />
          </div>
        </div>
      </div>
    </section>

    <!-- Alternative Contact Methods -->
    <section class="py-12 bg-white border-t border-slate-200">
      <div class="container text-center">
        <p class="text-slate-500 mb-4">Prefer email?</p>
        <a href="mailto:eraphaelparra@gmail.com" class="text-primary-600 font-bold text-lg hover:underline">
          eraphaelparra@gmail.com
        </a>
