---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Hero from '../components/Hero.astro';
import ServicesSection from '../components/ServicesSection.astro';
import VisionPlayground from '../components/VisionPlayground';
import BookingSection from '../components/BookingSection.astro';
import Footer from '../components/Footer.astro';
import { services } from '../data/services';
import SectionHeading from '../components/SectionHeading.astro';

const page = {
    title: "AI Automation Engineer | St. Augustine & Jacksonville, FL",
    description: "I help St. Augustine & Jacksonville businesses automate operations with AI Agents, Intelligent Document Processing, and Computer Vision. Book a free audit."
}

const navItems = [
  { label: 'AI Solutions', href: '#services' },
  { label: 'Vision Demo', href: '#vision-demo' },
  { label: 'Free Audit', href: '#booking' }
];
---
<BaseLayout title={page.title} description={page.description}>
  <SiteHeader navItems={navItems} />
  <Hero />
  <main>
    <ServicesSection services={services} />
    
    <section id="vision-demo" class="py-24 bg-slate-50">
      <div class="container">
        <div class="max-w-4xl mx-auto mb-12 text-center">
             <SectionHeading
                eyebrow="Interactive Demo"
                title="See AI Vision in Action"
                body="Try it yourself: Upload a sample invoice or site photo to see how AI extracts data and identifies safety hazards in real-time."
            />
        </div>
        <div class="max-w-5xl mx-auto">
            <VisionPlayground client:load />
        </div>
      </div>
    </section>

    <BookingSection />
  </main>
  <Footer />
</BaseLayout>
