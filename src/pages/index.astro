---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Hero from '../components/Hero.astro';
import ServicesSection from '../components/ServicesSection.astro';
import BookingSection from '../components/BookingSection.astro';
import CaseStudiesSection from '../components/CaseStudiesSection.astro';
import PostCaseStudiesCta from '../components/PostCaseStudiesCta.astro';
import Footer from '../components/Footer.astro';
import { caseStudies } from '../data/caseStudies';
import { services } from '../data/services';

const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Case Studies', href: '#case-studies' },
  { label: 'Free Assessment', href: '#booking' }
];
---
<BaseLayout>
  <SiteHeader navItems={navItems} />
  <Hero />
  <main>
    <ServicesSection services={services} />
    <BookingSection />
    <CaseStudiesSection items={caseStudies} />
    <PostCaseStudiesCta />
  </main>
  <Footer />
</BaseLayout>
