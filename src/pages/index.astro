---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Hero from '../components/Hero.astro';
import ServicesSection from '../components/ServicesSection.astro';
import LocalWins from '../components/LocalWins.astro';
import BookingSection from '../components/BookingSection.astro';
import Footer from '../components/Footer.astro';
import { services } from '../data/services';

const page = {
    title: "Business Technology Consultant | St. Augustine, FL",
    description: "I help St. Johns County businesses automate workflows, integrate payments/booking, build high-converting websites, and see their numbers clearly."
}

const navItems = [
  { label: 'Services', href: '#services' },
  { label: 'Local Wins', href: '#local-wins' },
  { label: 'Free Assessment', href: '#booking' }
];
---
<BaseLayout title={page.title} description={page.description}>
  <SiteHeader navItems={navItems} />
  <Hero />
  <main>
    <ServicesSection services={services} />
    <LocalWins />
    <BookingSection />
  </main>
  <Footer />
</BaseLayout>
