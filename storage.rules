rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to blog images
    match /blog/images/{allPaths=**} {
      allow read: if true;
    }
    
    // Default rule: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
